@model SolarMetrics.Web.Models.Cliente

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-4">
    <h1 class="h2 mb-4 text-danger">Deletar Cliente</h1>
    <p class="text-muted mb-4">Tem certeza que deseja excluir este cliente? Essa ação não poderá ser desfeita.</p>

    <div class="row">
        <div class="col-md-6">

            <div class="mb-3">
                <label class="form-label fw-bold">Nome:</label>
                <p class="form-control-plaintext">@Model.Nome</p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Email:</label>
                <p class="form-control-plaintext">@Model.Email</p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Telefone:</label>
                <p class="form-control-plaintext">@Model.Telefone</p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Tipo de Cliente:</label>
                <p class="form-control-plaintext">@Model.TipoUsuario</p>
            </div>

            <form asp-action="Delete" onsubmit="return confirmarExclusao()">
                <input type="hidden" asp-for="Id" />

                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarExclusao() {
            return confirm("Tem certeza que deseja deletar este cliente?");
        }
    </script>
}
