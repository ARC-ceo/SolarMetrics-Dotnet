@model IEnumerable<SolarMetrics.Web.ViewModels.ClienteViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var totalClientes = Model.Count();
    var totalResidenciais = Model.Count(c => c.TipoUsuario == "Residencial");
    var totalComerciais = Model.Count(c => c.TipoUsuario == "Comercial");
}

<main class="container-fluid py-4">
    <div class="mb-4">
        <h1 class="h2">Dashboard</h1>
        <p class="text-muted">Gerencie seus clientes e monitore o sistema</p>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4 g-3" id="statsCards">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-muted d-block mb-2">Total de Clientes</small>
                            <h3 class="mb-0">@totalClientes</h3>
                        </div>
                        <i class="fas fa-users text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-muted d-block mb-2">Residenciais</small>
                            <h3 class="mb-0">@totalResidenciais</h3>
                        </div>
                        <i class="fas fa-home text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-muted d-block mb-2">Comerciais</small>
                            <h3 class="mb-0">@totalComerciais</h3>
                        </div>
                        <i class="fas fa-building text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Clients Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title mb-1">Clientes</h5>
                <small class="text-muted">Gerencie todos os seus clientes cadastrados</small>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Novo Cliente
            </a>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">Nenhum cliente cadastrado</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="clientesTable">
                        <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Telefone</th>
                            <th>Tipo</th>
                            <th class="text-end">Ações</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td class="fw-medium">@cliente.Nome</td>
                                <td>@(cliente.Email)</td>
                                <td>@(cliente.Telefone)</td>
                                <td>
                                    <span class="badge @(cliente.TipoUsuario == "Residencial" ? "bg-primary" : "bg-secondary")">
                                        @cliente.TipoUsuario
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-ghost" asp-action="Edit" asp-route-id="@cliente.Id">
                                        <i class="fas fa-edit text-primary"></i>
                                    </a>
                                    <a class="btn btn-sm btn-ghost" asp-action="Delete" asp-route-id="@cliente.Id">
                                        <i class="fas fa-trash text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</main>